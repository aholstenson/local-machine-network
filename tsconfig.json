{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2019",
		"module": "CommonJS",
		"lib": [ "ES2019" ],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "dist/types",
		"outDir": "dist/lib",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	]
}
